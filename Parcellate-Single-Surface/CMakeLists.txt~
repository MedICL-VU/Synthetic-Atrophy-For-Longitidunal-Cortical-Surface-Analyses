cmake_minimum_required(VERSION 2.8)
 
PROJECT(ParcellateCortex)
 
find_package(VTK REQUIRED)
include(${VTK_USE_FILE})

find_package(ITK REQUIRED)
include(${ITK_USE_FILE})

add_executable(ParcellateCortex ParcellateCortex-edit.cpp)
 
target_link_libraries(ParcellateCortex ${VTK_LIBRARIES} ${ITK_LIBRARIES})
